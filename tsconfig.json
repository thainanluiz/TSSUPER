{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "isolatedModules": true,
    "outDir": "dist"
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
